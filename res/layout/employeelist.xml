<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="410dp"
  >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:background="@drawable/corner"
          android:orientation="vertical" 
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txtName"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Phone"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txt_Phone"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="ID"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Total Salary"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txtTotalSalary"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Total Salary"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Designiation"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txt_Designiation"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="txt_Designiation"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Experience"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txt_Experience"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Experience"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Joinning Data"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txt_JoinDate"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="txt_JoinDate"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Id Card"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txt_Id"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Id Card"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
           
            >
            <TextView 
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Address"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <TextView 
                android:id="@+id/txt_Address"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="lahore"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp" 
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
           
            >
            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
           
            >
           
            <TextView 
                android:id="@+id/txt_Edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="Edit Employee"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:clickable="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp" 
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
           
            >
            </LinearLayout>
             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
           
            >
           
            <TextView 
                android:id="@+id/txt_InActive"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:text="InActive"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:clickable="true"
                />
        </LinearLayout>
      
        
    </LinearLayout>

</RelativeLayout>